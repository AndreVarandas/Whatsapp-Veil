{
  "manifest_version": 2,

  "name": "Safe WhatsApp",
  "description": "This extension makes your WhatsApp browser app safe for work",
  "version": "0.0.2",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },

  "content_scripts": [{
    "matches": [
      "https://web.whatsapp.com/*"
    ],
    "js": ["safewhatsapp.js"],
    "css": [ "styles.css" ],
    "run_at": "document_start"
  }]
}
